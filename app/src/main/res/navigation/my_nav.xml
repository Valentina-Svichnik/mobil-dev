<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.lesson6.fragments.list.ListFragment"
        android:label="List"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.lesson6.fragments.add.AddFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.lesson6.fragments.update.ParentFragment"
        android:label="Nodes"
        tools:layout="@layout/fragment_update" >
        <argument
            android:name="currentNodeParent"
            app:argType="com.example.lesson6.model.Node" />
        <action
            android:id="@+id/action_updateFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_updateFragment_to_childrenFragment"
            app:destination="@id/childrenFragment" />
    </fragment>
    <fragment
        android:id="@+id/childrenFragment"
        android:name="com.example.lesson6.fragments.update.ChildrenFragment"
        android:label="Children"
        tools:layout="@layout/fragment_children" >
        <argument
            android:name="currentNodeChildren"
            app:argType="com.example.lesson6.model.Node" />
        <action
            android:id="@+id/action_childrenFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
    </fragment>
</navigation>